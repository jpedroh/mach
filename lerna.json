{
  "version": "4.1.11",
  "packages": [
    "packages/*"
  ],
  "npmClientArgs": [
    "--no-lockfile"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "version": {
      "ignoreChanges": [
        "*.md"
      ],
      "npmClient": "yarn",
      "message": "chore(release): publish %s",
      "conventionalCommits": true,
      "changelogPreset": {
        "name": "conventionalcommits",
        "issueUrlFormat": "{{host}}/{{owner}}/{{repository}}/issues/{{id}}"
      }
    }
  }
}
