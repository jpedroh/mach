{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["es6", "es2020"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@mach/shared/database": ["modules/shared/database/src/index.ts"],
      "@mach/shared/env": ["modules/shared/env/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
